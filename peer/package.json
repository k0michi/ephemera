{
	"devDependencies": {
		"protoc": "^33.5.0",
		"ts-proto": "^2.11.2",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-node": "^5.2.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@ephemera/shared": "*",
		"@grpc/grpc-js": "^1.14.3",
		"@libp2p/bootstrap": "^12.0.11",
		"@libp2p/crypto": "^5.1.13",
		"@libp2p/identify": "^4.0.10",
		"@libp2p/kad-dht": "^16.1.3",
		"@libp2p/noise": "^1.0.1",
		"@libp2p/websockets": "^10.1.3",
		"@libp2p/yamux": "^8.0.1",
		"@multiformats/multiaddr": "^13.0.1",
		"libp2p": "^3.1.3"
	},
	"type": "module",
	"scripts": {
		"build": "vite build",
		"start": "node ./dist/app.js",
		"dev": "vite-node app/app.ts --watch",
		"test": "vitest",
		"typecheck": "tsc -b",
		"gen-proto": "protoc --plugin=protoc-gen-ts_proto=../node_modules/ts-proto/protoc-gen-ts_proto --ts_proto_out=./app/gen --ts_proto_opt=esModuleInterop=true,outputServices=grpc-js,useOptionals=messages -I ./proto ./proto/*.proto"
	}
}
